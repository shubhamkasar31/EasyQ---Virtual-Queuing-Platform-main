<style>
.login-form {
    width: 340px;
    margin: 50px auto;
  	font-size: 15px;
    margin-top: 151px;
}
.login-form form {
    margin-bottom: 15px;
    background: #f7f7f7;
    box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
    padding: 30px;
}
.login-form h2 {
    margin: 0 0 15px;
}
.form-control{
    border: 1px solid black;
}
.form-control, .btn {
    min-height: 38px;
    border-radius: 2px;
}
.btn {        
    font-size: 15px;
    font-weight: bold;
}

#msg{
    color: rgb(112, 58, 58);
    font-family: 'Roboto Mono', monospace;
    display: flex;
    justify-content: center;
    font-weight: bold;
    background-color: rgb(104, 240, 149);
    border-radius: 5px;
}

#loginBtn{
    display: flex;
    justify-content: center;
}
</style>
</head>
<body>
    <%- include("navbar.ejs") %> 
<div class="login-form">
    <p id="msg"> <%=(typeof alertMsg!='undefined')? alertMsg:''%></p>
    <form name="login_form" action="/registerUser" method="post">
        <h2 class="text-center">Register User </h2>       
        <div class="form-group">
            <input type="text" name="username" class="form-control" placeholder="Email" required="required">
        </div>
        <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Password" required="required">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Register as User</button>
        </div>    
        <div class="form-group">
            <a href="/loginUser" id="loginBtn">Already have account? Log in</a>
        </div>  
    </form>
</div>
</body>
</html>